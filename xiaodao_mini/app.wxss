/**app.wxss**/
@import 'weui.wxss';
@import 'weui-custom.wxss';
@import 'colors.wxss';
@import 'button.wxss';

page {
  background: #f8f8f9;
  font-family: '微软雅黑';
  font-style: normal;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.mt20 {
  margin-top: 20rpx;
}

.rich-text {
  padding: 0 20rpx;
}

.hideWxBtn::after {
  border: 0;
}

.mainBackgroundColor {
  background: #31a89e;
}

.mainColor {
  color: #31a89e;
}

.gap {
  width: 750rpx;
  height: 20rpx;
  background: #f1f1f1;
}

/* 底部提交按钮开始 */

.bottomBtn {
  width: 750rpx;
  height: 120rpx;
  background: white;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

