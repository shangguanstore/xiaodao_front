/* 底部提交按钮结束 */

/* field开始 */

.fieldArea {
  width: 720rpx;
  background: white;
  padding-left: 30rpx;
  border-top: solid 1rpx #e5e5e5;
  border-bottom: solid 1rpx #e5e5e5;
}

/* field结束 */

/* 订单商品块区域开始 */

.orderGoodsBlock {
  width: 705rpx;
  border-top: solid 1px #dcdee2;
  padding: 30rpx;
  overflow: hidden;
}

.orderGoodsBlock .imgArea {
  float: left;
  width: 147rpx;
  height: 100rpx;
}

.orderGoodsBlock .imgArea image {
  width: 100%;
  height: 100%;
}

.orderGoodsBlock .goodsContent {
  width: calc(90% - 147rpx);
  float: left;
  margin-left: 30rpx;
}

.orderGoodsBlock .goodsContent .title {
  color: #17233d;
  font-size: 36rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.orderGoodsBlock .goodsContent .description {
  font-size: 27rpx;
  color: #83878a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.orderGoodsBlock .goodsContent .price {
  color: #808695;
  font-size: 28rpx;
}

.orderGoodsBlock .goodsContent .price .realPrice {
  color: #fa2c87;
  font-size: 34rpx;
  font-weight: 500;
}

.orderGoodsBlock .goodsContent .price .fullPrice {
  text-decoration: line-through;
  margin-left: 20rpx;
}

/* 订单商品块区域结束 */

.scroll-view_H {
  background: #31a89e;
  white-space: nowrap;
}

.scroll-view-item_H {
  float: left;
  margin: 20rpx -20rpx;
  margin-left: 40rpx;
  padding: 10rpx;
  padding-bottom: 3rpx;
  width: 652rpx;
}

/* 底部tab切换结束 */

.fixBottom {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  background: white;
}

.fixBottom .item {
  width: 33.3%;
  float: left;
  text-align: center;
}

.fixBottom view image {
  width: 49rpx;
  height: 49rpx;
  margin-top: 15rpx;
}

.fixBottom view .title {
  margin-top: -15rpx;
  font-size: 20rpx;
  color: #aaa;
}

/* 活动列表 */

.listArea {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.listArea .listItem {
  width: 702rpx;
  margin-top: 20rpx;
  background-color: #fff;
  box-shadow: 0rpx 6rpx 24rpx 0rpx rgba(83, 93, 99, 0.05);
  border-radius: 10rpx;
}

.listArea .listItem:first-child {
  margin-top: 0;
}

.listArea .listItem .detail {
  margin: 20rpx 16rpx;
  padding-bottom: 20rpx;
  font-size: 30rpx;
  color: #444;
}

/* 活动列表结束 */

/*自定义列表开始*/

.my-list-container {
  width: 100%;
  background: white;
}

.my-list-container .list {
  border-bottom: solid 1rpx #e5e5e5;
  margin-left: 30rpx;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
}

.my-list-container .list:last-child {
  border: none;
}

.my-list-container .list text:first-child {
  font-size: 34rpx;
  color: #777;
}

.my-list-container .list text:last-child {
  padding-right: 30rpx;
  font-size: 34rpx;
  color: #444;
}

/*自定义列表结束*/

form {
  width: 70%;
  margin-top: 60rpx;
}

form input {
  border: solid 1rpx #dcdee2;
  height: 90rpx;
}

form text {
  font-size: 28rpx;
  color: #808695;
  margin-top: 10rpx;
}

/* 加载中 */

.icon-load {
  animation: myMove1 1s infinite;
  /* ease-in *//* infinite *//* alternate */
}

@keyframes myMove1 {
  from {
    transform: rotate(40deg);
  }

  to {
    transform: rotate(400deg);
  }
}
/* 加载中结束 */

/* 报名列表开始 */
.applyAvatarList {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: flex-start;
}

.applyAvatarList .listItem {
  margin-right: 30rpx;
  text-align: center;
}

.applyAvatarList .listItem image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
}

.applyAvatarList .listItem .name {
  margin-top: -10rpx;
  font-size: 24rpx;
  color: #666;
}
/* 报名列表结束 */

