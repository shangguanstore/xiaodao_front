/* pages/activity/activity.wxss */
@import "/wxParse/wxParse.wxss";

.topArea image {
  width: 750rpx;
}

.topArea .des {
  width: 710rpx;
  padding: 0 20rpx;
  background: white;
}

.topArea .des .title {
  width: 100%;
  margin-top: 20rpx;
  text-align: left;
  color: black;
  font-weight: 500;
  font-size: 36rpx;
}

.topArea .des .time {
  width: 100%;
  margin: 10rpx 0;
  text-align: left;
  color: #515a6e;
  font-size: 30rpx;
}

.baomingTitle {
  width: 700rpx;
  margin-top: 20rpx;
  color: #31a89e;
  text-align: center;
}

.intro {
  font-size: 29rpx;
  color: #808695;
  margin-top: 10rpx;
}

form {
  margin-bottom: 90rpx;
}

button {
  margin: 20rpx 0;
  color: white;
  background: gray;
}

.rich-text {
  margin-bottom: 100rpx;
  background: white;
}

.fixBottom {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
}

.fixBottom .apply {
  width: 450rpx;
  height: 100%;
  float: left;
  background: #0099e9;
  text-align: center;
  color: white;
  line-height: 100rpx;
}

.fixBottom .share {
  width: 180rpx;
  height: 100%;
  float: left;
  background: #fff;
}

.fixBottom .share text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #919aa3;
}

.fixBottom .share button {
  position: absolute;
  width: 50px;
  height: 60px;
  top: 0;
  left: 148rpx;
  z-index: 2;
  opacity: 0;
}

.fixBottom .home {
  width: 120rpx;
  height: 100%;
  float: left;
  background: #fff;
}

.fixBottom .home text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #919aa3;
}

/* 团购 */

.fixBottom .aloneBuy {
  background: #09ba07;
  line-height: 100rpx;
  font-size: 31rpx;
  color: white;
  width: 50%;
  float: left;
  text-align: center;
}

.fixBottom .grouponBuy {
  width: 50%;
  float: left;
  background: #ff9b2c;
  color: white;
  text-align: center;
  font-size: 31rpx;
}

.fixBottom .grouponBuy view:first-child {
  margin-top: 7rpx;
}

.fixBottom .grouponBuy view:last-child {
  margin-top: -10rpx;
}

.applyArea {
  width: 710rpx;
  padding: 0 20rpx;
  background: white;
}

.applyArea .top {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: solid 1rpx #dcdee2;
}

.applyArea .top .count {
  float: left;
  font-size: 28rpx;
  color: #333;
}

.applyArea .top .seeMore {
  float: right;
  font-size: 28rpx;
  color: #0099e9;
}


.curGroupListArea {
  width: 710rpx;
  padding: 0 20rpx;
  background: white;
}

.curGroupListArea .title {
  margin-top: 10rpx;
}

.curGroupListArea .des {
  margin-top: 20rpx;
  font-size: 32rpx;
}

.curGroupListArea .listArea .listItem {
  padding-top: 14rpx;
  padding-bottom: 14rpx;
  display: flex;
  justify-content: space-between;
  border-top: solid 1rpx #eeeeee;
}

.curGroupListArea .listArea .left {
  display: flex;
  justify-content: space-between;
}

.curGroupListArea .listArea .left .pic image {
  width:80rpx;
  height:80rpx;
  border-radius:40rpx;
  margin-right:20rpx;
  margin-top:9rpx;
}

.curGroupListArea .listArea .left .content .num {
  font-size: 32rpx;
}
.curGroupListArea .listArea .left .content .time {
  font-size: 32rpx;
}

.curGroupListArea .listArea .right {
  margin-top: 14rpx;
}

.curGroupListArea .listArea .right .price {
  font-size: 26rpx;
}

.curGroupListArea .listArea .right button {
    width: 140rpx;
    padding:6rpx 18rpx;
    display:inline;
    margin-left:20rpx;
}

