<!--pages/activityApply/activityApply.wxml-->
<view class='container'>
  <demo-block title="请留下您的信息，我们会与您联系！">
    <van-cell-group>
      <van-field value="{{ username }}" bind:input="inputName" label="孩子姓名" placeholder="请输入您孩子的姓名" clearable icon-class="icon" required />
      <van-field value="{{ age }}" bind:input="inputAge" label="孩子年龄" placeholder="请输入您孩子的年龄" clearable icon-class="icon" />
      <van-field value="{{ phone }}" bind:input="inputPhone" label="手机号" placeholder="请输入您的手机号" clearable icon-class="icon" required />
    </van-cell-group>

    <!-- <van-button type="primary" open-type="getUserInfo" size="large" block custom-class="demo-margin-bottom" bind:click="submit">提交</van-button> -->

    <button bindtap="tapApply" type="primary" size="large" style='background:#44bb00;width:80%;margin-top:40rpx;'> 提交 </button>
  </demo-block>
</view>