<!--index.wxml-->
<view class="container">
  <!-- 原来的示例代码 -->
  <view class="userinfo" wx:if="{{false}}">
    <button class='hideWxBtn' wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

  <swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">
    <block wx:for="{{bannerList}}" wx:for-item="item" wx:for-index="index" wx:key="item.id">
      <swiper-item>
        <image src="{{item.imglink_format}}" class="slide-image" mode="aspectFill" /> 
      </swiper-item>
    </block>
  </swiper>

  <i-grid-item wx:if="{{!Loaded}}">
    <i-spin custom fix>
      <i-icon type="refresh" size="20" i-class="icon-load"></i-icon>
      <view>Loading</view>
    </i-spin>
  </i-grid-item>

  <view class='listTopLine'>
    <text class='line'></text>
    <text class='title'>推荐课程</text>
    <text class='line'></text>
  </view>

  <view class='listArea'>
    <view class='listItem' wx:for="{{activityList}}" wx:for-item="item" wx:for-index="index" wx:key="item.id" data-url="../activity/activity?id={{item.id}}" bindtap="routeTo">
      <!-- <image src='{{item.imglink_format}}'></image> -->
      <view style='background: url({{item.imglink_format}}) center center no-repeat; height: 360rpx; width: 100%;'></view>
      <view class='detail'>{{item.desc}}</view>
    </view>
  </view>

</view>