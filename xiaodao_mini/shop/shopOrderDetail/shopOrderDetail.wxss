/* shop/shopOrderDetail/shopOrderDetail.wxss */

.shop-goods-list{
    width:100%;
    background-color: #fff;
    margin-bottom: 20rpx;
}
.shop-goods-list .list-title{
    font-size: 28rpx;
    color: #000;
    padding: 30rpx 0 25rpx 30rpx;
}
.shop-goods-list  .a-goods{
    width: 720rpx;
    margin-left: 30rpx;
    display: flex;
    /*justify-content: space-between;*/
    border-top: 1px solid #eee;
    padding: 30rpx 30rpx 30rpx 0;
}
.shop-goods-list  .a-goods .img-box{
    width: 160rpx;
    height:160rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #d8d8d8;
}

.shop-goods-list .img-box .img{
    width: 160rpx;
    height:160rpx;
}
.shop-goods-list  .a-goods .text-box{
    width: 510rpx;
    box-sizing: border-box;
    padding-top: 10rpx;
}

.a-goods .text-box .arow{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.a-goods .text-box .arow .goods-name{
    width: 360rpx;
    font-size:26rpx;
    height: 74rpx;
    color:#000000;
    line-height: 1.6;
    overflow: hidden;
}
.a-goods .text-box .arow01{
    margin-bottom: 30rpx;
}
.a-goods .text-box .arow .goods-price{
    font-size:26rpx;
    color:#000000;
    align-self: flex-start;
}
.a-goods .text-box .arow .goods-label{
    font-size: 26rpx;
    color: #999;
}
.a-goods .text-box .arow .goods-num{
    font-size: 26rpx;
    color: #999;
}


.order_sn {
    margin-top: 20rpx;
    padding: 40rpx 30rpx;
    background: #eeeeee;
}

.order_sn .item {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    color: #444;
}

.bottomBtn button {
    width: 675rpx;
}